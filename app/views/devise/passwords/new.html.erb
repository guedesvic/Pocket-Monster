<div class="row justify-content-center">

  <div class="col-xl-10 col-lg-12 col-md-9">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
              <br>
                  <h1 class="h4 text-gray-900 mb-4">Seja Bem-vindo!</h1>
              </div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, placeholder:"Enter Email...", class:"form-control form-control-user", id:"exampleInputEmail" %>
                </div>

                <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-user btn-block" %>

                <hr>
              <% end %>
              <hr>
              <div class="text-center">
                <a class="small" href="forgot-password.html">Esqueceu a senha?</a>
              </div>
              <div class="text-center">
                <%= link_to new_trainer_registration_path, class:"small" do %>
                  Crie uma conta!
                <% end %>
              </div>
              <br>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>