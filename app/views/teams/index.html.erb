<div class="flex-row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t('messages.listing', model: @teams.model_name.human(count: 2)) %></h1>
  </div>
</div>

<hr class="sidebar-divider">

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Team Name</th>
        <th>
          <%= link_to new_team_path, class:"btn btn-success btn-circle" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.id %></td>
          <td><%= team.name %></td>
          <td style = "width: 200px">
            <%= link_to team, class:"btn btn-primary btn-circle" do %>
              <i class="fas fa-eye"></i>
            <% end %>

            <%= link_to edit_team_path(team), class:"btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
  
           <%= link_to team, method: :delete, class:"btn btn-danger btn-circle", data: {confirm: t('messages.confirm_exclusion')} do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
    <%= paginate @teams %>
  </div>

</div>